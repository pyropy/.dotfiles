# the scripting-addition must be loaded manually if
# you are running yabai on macOS Big Sur. Uncomment
# the following line to have the injection performed
# when the config is executed during startup.
#
# for this to work you must configure sudo such that
# it will be able to run the command without password

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"


# cfg
yabai -m config debug_output on

yabai -m config layout bsp
yabai -m config top_padding    10
yabai -m config bottom_padding 10
yabai -m config left_padding   10
yabai -m config right_padding  10
yabai -m config window_gap     10

yabai -m config mouse_modifier ctrl
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

# borders
yabai -m config window_border on | off
yabai -m config window_border_width 6
yabai -m config active_window_border_color 0xff775759
yabai -m config normal_window_border_color 0xff555555

yabai -m window --toggle border
yabai -m rule --add app="^Terminal|iTerm$" border=off

# Web browsers
yabai -m rule --add app="^Google Chrome|Firefox|Brave$" space=1
# Text editors
yabai -m rule --add app="^(Code|iTerm|Emacs)$" space=2
# Jetbrains apps
apps="^(IntelliJ IDEA|WebStorm|RubyMine|PyCharm|DataGrip|GoLand)$"
yabai -m rule --add app="${apps}" space=3  manage=off
# Terminal
yabai -m rule --add app="^(Slack)$" space=4
# Music
yabai -m rule --add app="^(Viber|Signal)$" space=5
# Social
yabai -m rule --add app="^(Notion)$" space=6


